<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:backgroundTint="@android:color/white"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeColor="#CCCCCC"
    app:strokeWidth="1dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:forceDarkAllowed="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Room Image -->
        <ImageView
            android:id="@+id/iv_room_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:background="#E0E0E0"
            android:contentDescription="Room image"
            app:srcCompat="@android:drawable/ic_menu_gallery" />

        <!-- Room Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="8dp">

            <TextView
                android:id="@+id/tv_room_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phòng Deluxe"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"/>

            <TextView
                android:id="@+id/tv_room_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1,000,000 VNĐ/đêm"
                android:textSize="16sp"
                android:textColor="#FF6B35"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tv_room_capacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sức chứa: 2 người"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tv_room_max_slots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max slots: 1"
                android:textSize="12sp"
                android:textColor="#999999"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- Actions -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btn_edit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_edit"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Edit"
                app:tint="#2196F3"/>

            <ImageButton
                android:id="@+id/btn_delete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_delete"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Delete"
                app:tint="#F44336"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>

