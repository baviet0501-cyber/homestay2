<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thanh toán"
            android:textColor="@color/home_title"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_booking_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Thông tin đặt phòng"
            android:textColor="@color/home_subtitle"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="16dp"
            android:background="@color/home_divider" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phương thức thanh toán"
            android:textColor="@color/home_title"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/rg_payment_method"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rb_qr_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Thanh toán bằng QR"
                android:textColor="@color/home_text"
                android:textSize="15sp"
                android:paddingVertical="8dp" />

            <RadioButton
                android:id="@+id/rb_momo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thanh toán bằng MoMo"
                android:textColor="@color/home_text"
                android:textSize="15sp"
                android:paddingVertical="8dp" />

            <RadioButton
                android:id="@+id/rb_zalopay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thanh toán bằng ZaloPay"
                android:textColor="@color/home_text"
                android:textSize="15sp"
                android:paddingVertical="8dp" />

            <RadioButton
                android:id="@+id/rb_pay_on_site"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thanh toán khi nhận phòng"
                android:textColor="@color/home_text"
                android:textSize="15sp"
                android:paddingVertical="8dp" />
        </RadioGroup>

        <!-- QR Code Section -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_qr_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/home_surface"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Quét mã QR để thanh toán"
                    android:textColor="@color/home_title"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/img_qr_code"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="12dp"
                    android:contentDescription="Mã QR thanh toán"
                    android:scaleType="fitCenter"
                    android:src="@drawable/qrthanhtoan" />

                <TextView
                    android:id="@+id/tv_bank_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:text="Ngân hàng: MB Bank\nSố tài khoản: 0343814123\nChủ tài khoản: PHAM PHAN BA VIET"
                    android:textColor="@color/home_text"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_payment_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Nội dung: Đặt phòng #HV00000001"
                    android:textColor="@color/home_subtitle"
                    android:textSize="11sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Payment Info for MoMo/ZaloPay -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_payment_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/home_surface"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_payment_method_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="MoMo"
                    android:textColor="@color/home_title"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_payment_instructions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Vui lòng mở ứng dụng MoMo và quét mã QR hoặc nhập số tiền để thanh toán"
                    android:textColor="@color/home_text"
                    android:textSize="13sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="16dp"
            android:background="@color/home_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tổng thanh toán:"
                android:textColor="@color/home_title"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_total_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 đ"
                android:textColor="@color/home_primary"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_confirm_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Xác nhận thanh toán"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:backgroundTint="@color/home_primary"
            app:cornerRadius="12dp" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>

