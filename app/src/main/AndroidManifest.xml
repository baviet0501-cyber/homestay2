<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".HomestayApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Homestay"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.Homestay">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.Homestay" />

        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.Homestay"
            android:parentActivityName=".LoginActivity" />

        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <activity
            android:name=".ui.RoomDetailActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />

        <!-- Admin Activities -->
        <activity
            android:name=".AdminLoginActivity"
            android:exported="false"
            android:theme="@style/Theme.Homestay" />

        <activity
            android:name=".AdminDashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.Homestay.Admin" />

        <activity
            android:name=".AdminRoomsActivity"
            android:exported="false"
            android:parentActivityName=".AdminDashboardActivity"
            android:theme="@style/Theme.Homestay.Admin" />

        <activity
            android:name=".AdminUsersActivity"
            android:exported="false"
            android:parentActivityName=".AdminDashboardActivity"
            android:theme="@style/Theme.Homestay.Admin" />

        <activity
            android:name=".AdminBookingsActivity"
            android:exported="false"
            android:parentActivityName=".AdminDashboardActivity"
            android:theme="@style/Theme.Homestay.Admin" />
    </application>

</manifest>